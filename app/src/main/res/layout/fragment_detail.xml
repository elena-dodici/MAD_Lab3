        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="50dp"
            android:orientation="vertical">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginTop="50dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/title_image"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:adjustViewBounds="true"
                                android:scaleX="0.8"
                                android:scaleY="0.8"
                                android:scaleType="centerCrop"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:src="@drawable/baseline_date_range_24"
                                app:shapeAppearanceOverlay="@style/RoundCorner"/>


                            <TextView
                                android:id="@+id/showDate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:gravity="center_horizontal"

                                android:text="@{vm.selectedRes.date.toString()}"
                                android:textSize="20sp"/>



                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btn_timePicker"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"

                                android:textAppearance="?attr/textAppearanceButton"
                                android:textColor="@android:color/white"
                                android:background="@drawable/custom_sports"
                                android:drawableTint="@color/white"
                                android:drawableStart="@drawable/baseline_edit_calendar_24"

                                android:text="Pick"
                                />
                        </LinearLayout>
                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/sep_line"/>
                    <LinearLayout
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:gravity="fill"
                            android:text="Free Slot"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                            android:textColor="@color/black" />


                        <Spinner
                            android:id="@+id/avaTime_spinner1"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="40dp"
                            android:switchTextAppearance="@style/TextAppearance.MaterialComponents.Headline6"/>
                    </LinearLayout>
                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/sep_line"/>
                    <LinearLayout
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:text="Duration"
                            android:gravity="fill"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="2"
                            android:gravity="fill"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                            android:text="1 Hour"
                            android:textColor="@color/black" />


                    </LinearLayout>
                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/sep_line"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp">

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:text="CourtName:"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <Spinner
                            android:id="@+id/courtName_spinner"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="2"
                            android:switchTextAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                            android:textSize="20dp" />
                    </LinearLayout>
                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/sep_line"/>
                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">
                        <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Description:"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textField"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/res_des">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editDescription"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:text="@={vm.selectedRes.description}"
                                android:inputType="textMultiLine"
                                tools:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/btFriends"
                        android:layout_width="wrap_content"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="30dp"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:text="Invite Friends"
                        android:drawableEnd="@drawable/baseline_keyboard_double_arrow_right_24"
                        android:textColor="@color/button_color"
                        android:drawableTint="@color/button_color"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="20dp"
                        >

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/saveBtn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/custom_sports"
                            android:text="SAVE"
                            android:textAppearance="?attr/textAppearanceButton"
                            android:textColor="@android:color/white"

                            />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/delBtn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/custom_sports"
                            android:backgroundTint="@color/md_theme_light_error"
                            android:text="DELETE"
                            android:textAppearance="?attr/textAppearanceButton"
                            android:textColor="@android:color/white"

                            />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/calBtn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:layout_weight="1"
                            android:text="CANCEL"

                            android:textAppearance="?attr/textAppearanceButton"
                            android:textColor="@android:color/white"
                            android:background="@drawable/custom_sports"

                            />
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>


</FrameLayout>
</layout>