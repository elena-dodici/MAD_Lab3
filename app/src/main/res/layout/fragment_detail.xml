<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="vm" type="com.example.lab3.CalendarViewModel"/>

    </data>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailFragment">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/deeper_toolbar_color2"

        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/activityToolbar"
            android:layout_width="match_parent"
            app:title="@string/court_review_title"
            android:layout_height="?attr/actionBarSize"
            />

    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Date:"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/showDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@{vm.selectedRes.date.toString()}"
            android:textSize="20sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_timePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:background="@drawable/custom_sports"
            android:text="@string/pick_time"
            />
    </LinearLayout>


        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="15dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="Available time slot"
                android:textColor="@color/black"
                android:textSize="20dp" />


            <Spinner
                android:id="@+id/avaTime_spinner1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:textSize="20sp"/>
        </LinearLayout>




        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="15dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text=" Duration"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:layout_width="15dp"
                android:layout_height="30dp"
                android:layout_weight="1"

                android:text="1 Hour"
                android:textColor="@color/black"
                android:textSize="20dp" />
<!--            <Spinner-->
<!--                android:id="@+id/endTime_spinner"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_weight="1"-->
<!--                android:layout_height="48dp"-->
<!--                android:textSize="20dp"/>-->
        </LinearLayout>

<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="30dp">-->
<!--            <TextView-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_weight="1"-->
<!--                android:text="Sport:"-->
<!--                android:textColor="@color/black"-->
<!--                android:textSize="20sp" />-->


<!--            <Spinner-->
<!--                android:id="@+id/sportType_spinner"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_weight="1"-->
<!--                android:layout_height="48dp"-->
<!--                android:textSize="20dp"/>-->
<!--        </LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CourtName:"
                android:textColor="@color/black"
                android:textSize="20sp" />



            <Spinner
                android:id="@+id/courtName_spinner"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Description:"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editDescription"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:text="@={vm.selectedRes.description}"
            android:textSize="20sp" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/saveBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:background="@drawable/custom_sports"
            android:layout_weight="1"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"

            />



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/delBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DELETE"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:background="@drawable/custom_sports"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/calBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CANCEL"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:background="@drawable/custom_sports"
            android:layout_marginTop="30dp"

            />
    </LinearLayout>
    </LinearLayout>



</FrameLayout>
</layout>