        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView

                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="CourtName:"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:textColor="@color/black"
                android:textSize="20sp" />



            <Spinner
                android:id="@+id/courtName_spinner"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="2"
                android:switchTextAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:textSize="20dp" />
        </LinearLayout>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/sep_line"/>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Description:"
            android:textColor="@color/black"
            android:textSize="20sp" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/res_des">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="@={vm.selectedRes.description}"
                    android:inputType="textMultiLine"
                    tools:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    />

            </com.google.android.material.textfield.TextInputLayout>

